<%= layout("layouts/boilerplate") %>
<div class="clr">
  <div class="lr">
    <h1>Login</h1>
    <form action="/login" method="POST">
      <div class="lr-details">
        <input
          class="lr-details"
          name="username"
          placeholder="Username"
          required
        />
      </div>

      <div class="lr-details">
        <input
          name="password"
          type="password"
          placeholder="Password"
          required
        />
      </div>

      <button
        style="
          display: flex;
          justify-content: center;
          align-items: center;
          width: 100%;
          margin-top: 5px;
          background-color: rgba(0, 0, 0, 0.5);
          height: 25px;
          border-radius: 20px;
          color: white;
        "
        class="btn"
        type="submit"
      >
        Login
      </button>
    </form>
    <br />
    <p>create a new account <a href="/signup">Sign Up</a></p>
  </div>
</div>
